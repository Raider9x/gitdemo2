<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>MusicID</title>
</head>
<body>
<style>

    #header{


    }
    #search{

        margin-top:10px;
        margin-right: 600px;
        float:right;
        width: 700px;
    }
    form.example button:hover {
        background: #0b7dda;
    }
    form.example input[type=text] {
        padding: 5px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 60%;
        background: #f1f1f1;
    }
    form.example button {
        float: inherit;
        width: 10%;
        padding: 10px;
        background: #2196F3;
        color: white;
        font-size: 10px;
        border: 1px solid grey;

        cursor: pointer;
    }
    #header_div1 {
        display: inline;
        width:120px;
        height:5px;
        font-size: 40px;
    }


    #contentProfile {
        border: 1px solid blue;
    }


    #videocontent{
        float:left;
        white-space: normal;
    }


    #avatar{
        display:block;
        width:600px;


        font-size: 30px;
        margin-left: 80px;
        margin-top: 50px;

    }
    #avatar img{
        width:80px;
        height:80px;
    }

    #content{
        display:inline-block;
        width:200px;
        height: 260px;
        margin-left: 0px;
        margin-top: 10px;
        border: 1px solid black;
        position: relative;
        text-align: center;
        color: white;
    }
    #content img{
        width:200px;
        height:260px;
        object-fit: cover;


    }

    #videocontent{

    }

    #playcount {
        text-shadow: 0 0 5px #000000;
        font-size: 20px;
        position: absolute;
        bottom: 8px;
        left: 8px;

    }
    #body{
        display:inline-block;
        width:900px;
        margin-left: 80px;
    }

</style>





<% include header.ejs %>




<div id="avatar">
   Music ID: <%= name %>
</div>

<div id="body">
    <%for(var i=0;i<url.length;i++){%>
    <div id="content" class ="container">
        <div id="videocontent"><a href="http://localhost:8000/video/<%= url[i].id %>"><img src="<%= url[i].covers.dynamic %>"></a></div>
        <%if(parseFloat(url[i].playCount) < 10000){%><div id="playcount"><b>▷<%=parseInt(url[i].playCount)%></b></div><%}
        else if(parseFloat(url[i].playCount) < 1000000) {%>  <div id="playcount"><b>▷<%=parseFloat(url[i].playCount/1000).toFixed(1)%>K</b></div> <%}
        else {%>  <div id="playcount"><b>▷<%=parseFloat(url[i].playCount/1000000).toFixed(1)%>M</b></div> <%}%>
    </div>
    <% }%>


</div>
<p id="demo"></p>





</body>
</html>

