<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>User Profile</title>
</head>
<body>

<style>

    #header{

    }
    #search{

        margin-top:10px;
        margin-right: 600px;
        float:right;
        width: 700px;
    }
    form.example button:hover {
        background: #0b7dda;
    }
    form.example input[type=text] {
        padding: 5px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 60%;
        background: #f1f1f1;
    }
    form.example button {
        float: inherit;
        width: 10%;
        padding: 10px;
        background: #2196F3;
        color: white;
        font-size: 10px;
        border: 1px solid grey;

        cursor: pointer;
    }
    #header_div1 {
        display: inline;
        width:120px;
        height:5px;
        font-size: 40px;
    }


    #contentProfile {
        border: 1px solid blue;
    }


    #videocontent{

        float:left;
        white-space:normal;

    }


    #avatar{
        display:block;
        width:150px;
        height:150px;

        font-size: 40px;
        margin-left: 80px;

        float:left;
    }
    #avatar img{
        border-radius: 50%;
        width:150px;
        height:150px;
    }
    #intro_name{
        display:inline-block;

        font-size: 40px;
        margin-left: 5px;

    }
    #intro_nickname{
        display:block;

        margin-left: 5px;
        font-size: 20px;


    }
    #content{
        display:inline-block;
        width:200px;
        height: 260px;
        margin-left: 0px;
        margin-top: 10px;
        border: 1px solid black;
        position: relative;
        text-align: center;
        color: white;
    }
    #content img{
        width:200px;
        height:260px;
        object-fit: cover;


    }

    #videocontent{

    }
#all_intro{
    display:inline-block;
    margin-left: 10px;
}
    #playcount {
        text-shadow: 0 0 5px #000000;
        font-size: 20px;
        position: absolute;
        bottom: 8px;
        left: 8px;

    }
    #body{
        display:block;
        width:900px;
        margin-left: 80px;
        margin-top: 20px;

    }
#khung{
    display:inline-block;
    width:900px;

    margin-top: 40px;
}
#like {
    margin-left: 80px;
    margin-top: 5px;
    font-size: 20px;
    width: 50%;
}
</style>





<% include header.ejs %>



<div id="khung">
    <div id="avatar">
        <img src="<%= url[0].authorMeta.avatar %>">
    </div>
    <div id="all_intro">
        <div id="intro_name">

            <% if(url[0].authorMeta.verified == true){ %>
           <b><%= url[0].authorMeta.name%></b>
            <img src='http://s16.tiktokcdn.com/tiktok/falcon/_next/static/images/icon_checked-58a305f9a95cb2c0e2a24daf636f5c12.svg'>
            <% }  else {%><b><%=url[0].authorMeta.name%></b> <%}%>


        </div>
        <div id="intro_nickname">
            <%= url[0].authorMeta.nickName %>
        </div>
    </div>

</div >
    <div id = "like">
       <%if(parseFloat(url2.following) < 10000){%><b><%=parseInt(url2.following)%></b> Following   &nbsp;&nbsp;<%}
       else if(parseFloat(url2.following) < 1000000) {%> <b><%=parseFloat(url2.following/1000).toFixed(1)%>K</b> Following   &nbsp;&nbsp;<%}
       else {%>  <b><%=parseFloat(url2.following/1000000).toFixed(1)%>M</b> Following   &nbsp;&nbsp; <%}%>

        <%if(parseFloat(url[0].authorMeta.fans) < 10000){%><b><%=parseInt(url2.fans)%></b> Followers  &nbsp;&nbsp;<%}
        else if(parseFloat(url[0].authorMeta.fans) < 1000000) {%> <b><%=parseFloat(url2.fans/1000).toFixed(1)%>K</b> Followers  &nbsp;&nbsp; <%}
        else {%>  <b><%=parseFloat(url2.fans/1000000).toFixed(1)%>M</b> Followers  &nbsp;&nbsp; <%}%>

        <%if(parseFloat(url2.heart) < 10000){%><b><%=parseInt(url2.heart)%></b> Hearts <br><br><%}
        else if(parseFloat(url2.heart) < 1000000) {%> <b><%=parseFloat(url2.heart/1000).toFixed(1)%>K</b> Hearts <br><br> <%}
        else {%>  <b><%=parseFloat(url2.heart/1000000).toFixed(1)%>M</b> Hearts <br><br> <%}%>

        <% var arr = url[0].authorMeta.signature.split("\n");
        for(var i=0;i< arr.length;i++){%>
        <%=arr[i]%><br><%
        } %>

   </div>


<div id="body">
    <%for(var i=0;i<url.length;i++){%>
    <div id="content" class ="container">
    <div id="videocontent"><a href="http://localhost:8000/video/<%= url[i].id %>"><img src="<%= url[i].covers.dynamic %>"></a></div>
    <%if(parseFloat(url[i].playCount) < 10000){%><div id="playcount"><b>▷<%=parseInt(url[i].playCount)%></b></div><%}
    else if(parseFloat(url[i].playCount) < 1000000) {%>  <div id="playcount"><b>▷<%=parseFloat(url[i].playCount/1000).toFixed(1)%>K</b></div> <%}
    else {%>  <div id="playcount"><b>▷<%=parseFloat(url[i].playCount/1000000).toFixed(1)%>M</b></div> <%}%>
    </div>
    <% }%>


</div>
<p id="demo"></p>





</body>
</html>

